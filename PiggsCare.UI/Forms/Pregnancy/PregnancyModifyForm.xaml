<views:MvxWpfView x:Class="PiggsCare.UI.Forms.Pregnancy.PregnancyModifyForm"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:pregnancy="clr-namespace:PiggsCare.Core.ViewModels.Pregnancy;assembly=PiggsCare.Core"
                  xmlns:resources="clr-namespace:PiggsCare.UI.Resources"
                  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  d:DataContext="{d:DesignInstance Type=pregnancy:PregnancyModifyFormViewModel}"
                  d:DesignHeight="auto"
                  d:DesignWidth="auto"
                  mc:Ignorable="d">
    <Border Background="{DynamicResource TertiaryBackgroundColor}">
        <Grid Margin="30,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <TextBlock Grid.Row="0"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TertiaryTextColor}"
                       Text="Modify Pregnancy Scan for Pig"
                       TextAlignment="Center">
                <iconPacks:PackIconMaterial VerticalAlignment="Center"
                                            Kind="AccountPlusOutline"
                                            Style="{DynamicResource FormButtonIcon}" />
            </TextBlock>

            <!--  Input Elements  -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  //Scan Date  -->
                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Margin="20,10">
                    <TextBlock Margin="0,0,0,8"
                               FontSize="13"
                               Foreground="#97a5b4"
                               Text="Date" />

                    <StackPanel Orientation="Horizontal">
                        <ui:CalendarDatePicker x:Name="CalendarDatePicker"
                                               Margin="10,0,0,0"
                                               VerticalAlignment="Center"
                                               Content="Pick the Scan date"
                                               Date="{Binding ScanDate, Mode=TwoWay}"
                                               IsTodayHighlighted="True"
                                               Style="{StaticResource CancelButton}" />

                        <ui:TextBlock x:Name="CalendarDate"
                                      Margin="10"
                                      VerticalAlignment="Center"
                                      FontSize="20"
                                      Text="{Binding ElementName=CalendarDatePicker, Path=.Date}" />
                    </StackPanel>

                </StackPanel>

                <!--  //Scan Results  -->
                <resources:CustomTextBox Grid.Row="0"
                                         Grid.Column="1"
                                         Margin="0,0,0,5"
                                         Data="{Binding ScanResults, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"
                                         Description="Scan Results"
                                         Placeholder="Pregnant" />


                <!--  //Cancel Button  -->
                <Button Grid.Row="1"
                        Grid.Column="0"
                        Command="{Binding CancelRecordCommand}"
                        Content="Cancel"
                        IsCancel="True"
                        Style="{StaticResource CancelButton}" />

                <!--  //Submit Button  -->
                <Button Grid.Row="1"
                        Grid.Column="1"
                        Command="{Binding SubmitRecordCommand}"
                        Content="Submit"
                        IsDefault="True"
                        Style="{StaticResource SuccessButton}" />
            </Grid>
        </Grid>
    </Border>
</views:MvxWpfView>