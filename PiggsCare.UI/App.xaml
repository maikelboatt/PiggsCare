<views:MvxApplication x:Class="PiggsCare.UI.App"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                      xmlns:converters="clr-namespace:PiggsCare.UI.Converters">
    <views:MvxApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Default theme of application  -->
                <ResourceDictionary Source="Themes/LightTheme.xaml" />

                <ResourceDictionary Source="Assets/Icons/Icons.xaml" />
                <ResourceDictionary Source="Styles/ButtonStyle.xaml" />
                <ResourceDictionary Source="Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="Styles/DataGridStyles.xaml" />
                <ResourceDictionary Source="Styles/CollectionItemsStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        </ResourceDictionary>
    </views:MvxApplication.Resources>
</views:MvxApplication>