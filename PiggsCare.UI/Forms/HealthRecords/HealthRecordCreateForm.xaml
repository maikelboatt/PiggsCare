<views:MvxWpfView x:Class="PiggsCare.UI.Forms.HealthRecords.HealthRecordCreateForm"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:healthRecords="clr-namespace:PiggsCare.Core.ViewModels.HealthRecords;assembly=PiggsCare.Core"
                  xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:resources="clr-namespace:PiggsCare.UI.Resources"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  d:DataContext="{d:DesignInstance Type=healthRecords:HealthRecordCreateFormViewModel}"
                  d:DesignHeight="auto"
                  d:DesignWidth="auto"
                  mc:Ignorable="d">
    <Border Background="{DynamicResource TertiaryBackgroundColor}">
        <Grid Margin="30,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <TextBlock Grid.Row="0"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TertiaryTextColor}"
                       Text="Add Health Record for Pig"
                       TextAlignment="Center">
                <iconPacks:PackIconMaterial VerticalAlignment="Center"
                                            Kind="AccountPlusOutline"
                                            Style="{DynamicResource FormButtonIcon}" />
            </TextBlock>

            <!--  Input Elements  -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  //Record Date  -->
                <resources:CustomTextBox Grid.Row="0"
                                         Grid.Column="0"
                                         Margin="0,0,0,5"
                                         Data="{Binding RecordDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                                         Description="Record Date"
                                         Placeholder="2025-02-12 (YY-MM-DD)" />

                <!--  //Diagnosis  -->
                <resources:CustomTextBox Grid.Row="0"
                                         Grid.Column="1"
                                         Margin="0,0,0,5"
                                         Data="{Binding Diagnosis, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"
                                         Description="Diagnosis"
                                         Placeholder="Fever" />


                <!--  //Treatment  -->
                <resources:CustomTextBox Grid.Row="1"
                                         Grid.Column="0"
                                         Margin="0,0,0,5"
                                         Data="{Binding Treatment, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                                         Description="Treatment"
                                         Placeholder="Obolo" />

                <!--  //Outcome  -->
                <resources:CustomTextBox Grid.Row="1"
                                         Grid.Column="1"
                                         Margin="0,0,0,5"
                                         Data="{Binding Outcome, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                                         Description="Outcome"
                                         Placeholder="Male" />


                <!--  //Cancel Button  -->
                <Button Grid.Row="2"
                        Grid.Column="0"
                        Command="{Binding CancelRecordCommand}"
                        Content="Cancel"
                        IsCancel="True"
                        Style="{StaticResource CancelButton}" />

                <!--  //Submit Button  -->
                <Button Grid.Row="2"
                        Grid.Column="1"
                        Command="{Binding SubmitRecordCommand}"
                        Content="Submit"
                        IsDefault="True"
                        Style="{StaticResource SuccessButton}" />
            </Grid>
        </Grid>
    </Border>
</views:MvxWpfView>