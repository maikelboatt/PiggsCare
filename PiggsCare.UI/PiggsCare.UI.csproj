<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net9.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UseWPF>true</UseWPF>
    </PropertyGroup>

    <ItemGroup>
        <Folder Include="Components\" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="Assets\Icons\Logo1.png" />
        <Resource Include="Assets\Icons\Logo1.png">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Resource>
        <None Remove="Assets\Icons\Logo2.jpeg" />
        <ProjectReference Include="..\PiggsCare.Core\PiggsCare.Core.csproj" />
        <Resource Include="Assets\Icons\Logo2.jpeg">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Resource>
    </ItemGroup>

</Project>
