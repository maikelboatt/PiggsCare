<views:MvxWpfView x:Class="PiggsCare.UI.Forms.AnimalCreateForm"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:resources="clr-namespace:PiggsCare.UI.Resources"
                  xmlns:viewModels="clr-namespace:PiggsCare.Core.ViewModels;assembly=PiggsCare.Core"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  d:DataContext="{d:DesignInstance Type=viewModels:AnimalCreateFormViewModel}"
                  d:DesignHeight="auto"
                  d:DesignWidth="auto"
                  mc:Ignorable="d">
    <Border Background="{DynamicResource TertiaryBackgroundColor}">
        <Grid Margin="30,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <TextBlock Grid.Row="0"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TertiaryTextColor}"
                       Text="Add New Pig"
                       TextAlignment="Center">
                <icon:PackIconMaterial VerticalAlignment="Center"
                                       Kind="AccountPlusOutline"
                                       Style="{DynamicResource FormButtonIcon}" />
            </TextBlock>

            <!--  Input Elements  -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  //Name  -->
                <resources:CustomTextBox Grid.Row="0"
                                         Grid.Column="0"
                                         Data="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                         Description="Name"
                                         Placeholder="101" />

                <!--  //Certificate Number  -->
                <resources:CustomTextBox Grid.Row="0"
                                         Grid.Column="1"
                                         Data="{Binding CertificateNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                         Description="Certificate Number"
                                         Placeholder="12" />

                <!--  //Breed  -->
                <resources:CustomTextBox Grid.Row="1"
                                         Grid.Column="0"
                                         Data="{Binding Breed, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                         Description="Breed"
                                         Placeholder="Obolo" />

                <!--  //Gender  -->
                <resources:CustomTextBox Grid.Row="1"
                                         Grid.Column="1"
                                         Data="{Binding Gender, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                         Description="Gender"
                                         Placeholder="Male" />

                <!--  //Birth Date  -->
                <resources:CustomTextBox Grid.Row="2"
                                         Grid.Column="0"
                                         Data="{Binding BirthDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                         Description="Birth Date"
                                         Placeholder="12-11-2023" />

                <!--  //Back Fat Index  -->
                <resources:CustomTextBox Grid.Row="2"
                                         Grid.Column="1"
                                         Data="{Binding BackFatIndex, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                         Description="Back Fat Index"
                                         Placeholder="34" />

                <TextBox Grid.Row="3"
                         Grid.Column="0"
                         Text="{Binding Name, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Grid.Row="3"
                           Grid.Column="1"
                           Text="{Binding Errors[Name], Converter={StaticResource ErrorConverter}}" />

                <!--  //Cancel Button  -->
                <Button Grid.Row="4"
                        Grid.Column="0"
                        Command="{Binding CancelRecordCommand}"
                        Content="Cancel"
                        IsCancel="True"
                        Style="{StaticResource CancelButton}" />

                <!--  //Submit Button  -->
                <Button Grid.Row="4"
                        Grid.Column="1"
                        Command="{Binding SubmitRecordCommand}"
                        Content="Submit"
                        IsDefault="True"
                        Style="{StaticResource SuccessButton}" />
            </Grid>
        </Grid>
    </Border>
</views:MvxWpfView>